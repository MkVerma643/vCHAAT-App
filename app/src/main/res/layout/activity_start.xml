<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my"
    tools:context="com.example.prem.letstalk.StartActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:id="@+id/setting_name"
        android:layout_alignBottom="@+id/setting_status"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vCHAT"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="24sp"
        android:id="@+id/setting_status"
        android:layout_marginBottom="68dp"
        android:layout_above="@+id/start_login_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/start_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:padding="20dp"
        android:text="@string/already_have_account"
        android:layout_above="@+id/start_reg_button"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/start_reg_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_purple"
        android:padding="20dp"
        android:text="@string/need_an_account"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mypic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
